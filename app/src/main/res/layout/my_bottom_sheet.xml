<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:padding="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_margin="0dp"
        android:background="@drawable/bottom_sheet_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/cameraButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/sheet_button"
        android:padding="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageButton
        android:id="@+id/image1"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="460dp"
        android:background="@drawable/empty_image"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/plus_im"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/image2"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="340dp"
        android:background="@drawable/empty_image"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/plus_im"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/image3"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/empty_image"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/plus_im"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/GalleryButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/sheet_button"
        android:padding="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/minus1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/minus"
        app:layout_constraintEnd_toEndOf="@+id/image1"
        app:layout_constraintTop_toTopOf="@+id/image1"
        android:visibility="invisible"
        />
    <ImageButton
        android:id="@+id/minus2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/minus"
        app:layout_constraintEnd_toEndOf="@+id/image2"
        app:layout_constraintTop_toTopOf="@+id/image2"
        android:visibility="invisible"
        />
    <ImageButton
        android:id="@+id/minus3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/minus"
        app:layout_constraintEnd_toEndOf="@+id/image3"
        app:layout_constraintTop_toTopOf="@+id/image3"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/medicine_line1"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintStart_toEndOf="@+id/image1"
        android:scrollHorizontally="true"
        android:textSize="17sp"
        android:text=""/>

    <TextView
        android:id="@+id/hospital_line1"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintStart_toEndOf="@+id/image1"
        android:scrollHorizontally="true"
        android:textSize="17sp"
        android:text=""/>

    <TextView
        android:id="@+id/medicine_line2"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/line2"
        app:layout_constraintStart_toEndOf="@+id/image2"
        android:scrollHorizontally="true"
        android:textSize="17sp"
        android:text=""/>

    <TextView
        android:id="@+id/hospital_line2"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintStart_toEndOf="@+id/image2"
        android:scrollHorizontally="true"
        android:textSize="17sp"
        android:text=""/>

    <TextView
        android:id="@+id/medicine_line3"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/line3"
        app:layout_constraintStart_toEndOf="@+id/image3"
        android:scrollHorizontally="true"
        android:textSize="17sp"
        android:text=""/>

    <TextView
        android:id="@+id/hospital_line3"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        app:layout_constraintStart_toEndOf="@+id/image3"
        android:scrollHorizontally="true"
        android:textSize="17sp"
        android:text=""/>
    <View
        android:id="@+id/line1"
        android:layout_width="220dp"
        android:layout_height="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/empty_image"
        app:layout_constraintStart_toEndOf="@+id/image1"
        app:layout_constraintTop_toTopOf="@+id/image1" />

    <View
        android:id="@+id/line2"
        android:layout_width="220dp"
        android:layout_height="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/empty_image"
        app:layout_constraintStart_toEndOf="@+id/image2"
        app:layout_constraintTop_toTopOf="@+id/image2" />

    <View
        android:id="@+id/line3"
        android:layout_width="220dp"
        android:layout_height="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/empty_image"
        app:layout_constraintStart_toEndOf="@+id/image3"
        app:layout_constraintTop_toTopOf="@+id/image3" />


</androidx.constraintlayout.widget.ConstraintLayout>