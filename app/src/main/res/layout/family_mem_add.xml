<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_marginBottom="20dp">
    <RelativeLayout
        android:id="@+id/family_mem"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_corner_left"
        android:elevation="10dp">
        <ImageView android:id="@+id/top_mem1" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/user1"/>
        <RelativeLayout android:id="@+id/parent_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="20dp" android:layout_toRightOf="@+id/top_mem1" android:orientation="horizontal">
            <TextView
                android:id="@+id/tep1_mem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaa"
                android:textSize="23dp"/>
            <ImageView
                android:id="@+id/family_send"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="6dp"
                android:layout_toLeftOf="@+id/extra_info"
                android:src="@drawable/familysend"/>
            <ImageView
                android:id="@+id/extra_info"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow_down"/>
<!--            <ImageView -->
<!--                android:id="@+id/family_checked" -->
<!--                android:layout_width="18dp" -->
<!--                android:layout_height="18dp" -->
<!--                android:layout_alignParentRight="true" -->
<!--                android:layout_gravity="center_vertical" -->
<!--                android:layout_marginTop="10dp" -->
<!--                android:layout_marginEnd="20dp" -->
<!--                android:src="@drawable/pill_checked"/>-->
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_below"
        android:orientation="vertical"
        android:id="@+id/drug_info"
        android:layout_gravity="center"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/drug_info_d"
            android:orientation="vertical"
            android:background="@drawable/border_setting_below">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <ImageView android:id="@+id/family_pill" android:layout_width="41dp" android:layout_height="41dp" android:layout_marginTop="10dp" android:layout_marginLeft="10dp" android:src="@drawable/ic_medicine_icon"/>
                <TextView android:id="@+id/pill_text" android:layout_width="130dp" android:layout_height="wrap_content" android:layout_alignBottom="@id/family_pill" android:layout_marginLeft="20dp" android:layout_marginBottom="10dp" android:layout_toRightOf="@+id/family_pill" android:text="약" android:textSize="17dp"/>
                <ImageView android:id="@+id/member_pillcheck" android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/pill_check" android:layout_centerVertical="true" android:layout_toEndOf="@id/pill_text" android:layout_marginRight="7dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginTop="10dp" android:layout_marginBottom="5dp" android:background="@drawable/border_setting_below">
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_width="34dp" android:layout_height="34dp" android:id="@+id/sub_pill" android:layout_marginTop="10dp" android:layout_marginBottom="5dp" android:layout_marginLeft="10dp" android:src="@drawable/nonpill"/>
                <TextView android:id="@+id/sub_pill_text" android:layout_width="130dp" android:layout_height="wrap_content" android:layout_alignBottom="@id/sub_pill" android:layout_marginLeft="20dp" android:layout_marginBottom="10dp" android:layout_toRightOf="@+id/sub_pill" android:text="보조제" android:textSize="17dp"/>
                <ImageView android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/pill_check" android:layout_centerVertical="true" android:layout_toEndOf="@id/sub_pill_text" android:layout_marginRight="7dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>